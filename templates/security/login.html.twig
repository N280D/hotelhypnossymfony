{% extends 'base.html.twig' %}

{% block title %}Se Connecter{% endblock %}
 
{% block body %}
{{include("partials/title_section.html.twig",{'nom':'Connection!'})}}
<div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Login</h3>
                            </div>
                            <form method="post">
                             {% if app.user %}
                                    <div class="mb-3">
                                        Vous êtes authentifier sous {{ app.user.Prenom}}, <a href="{{ path('app_logout') }}">Se deconnecter</a>
                                    </div>
                                {% endif %}

                            <div class="message-flash">
                                 {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}               
                                </div>
                                <div class="form-group">
                                   <label for="inputEmail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                </div>
                                </div>
                                <div class="form-group">
                                <div class="login_footer form-group">
                                    <div class="chek-form">
                                        <div class="custome-checkbox">
                                            <input class="form-check-input" type="checkbox" name="checkbox" id="exampleCheckbox1" value="">
                                        <label class="form-check-label" for="exampleCheckbox1"><span>Se souvenir de moi </span></label>
                                        </div>
                                    </div>
                                    <a href="{{path('app_forgot_password_request')}}">Mot de passe oubliez?</a>

                                </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword">Mot de passe</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                </div>
                                 <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                    >
                                <divclass="form-group"> 
                                <button type="submit" class="btn btn-fill-out btn-lock" name="connection">Se connecter</button>
                                </div>    
                            </form>
                            <div class="different_login">
                                <span> or</span>
                            </div>
                            <ul class="btn-login list_none text-center">
                                <li><a href="#" class="btn btn-facebook"><i class="ion-social-facebook"></i>Facebook</a></li>
                                <li><a href="#" class="btn btn-google"><i class="ion-social-googleplus"></i>Google</a></li>
                            </ul>
                            <div class="form-note text-center">Vous n'avez pas de compte? <a href="{{path('app_register')}}">Créer un compte</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


  {% endblock %}

   

