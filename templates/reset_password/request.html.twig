{% extends 'base.html.twig' %}

{% block title %}Réinitaliser votre mot de passe{% endblock %}

{% block body %}
    {{include("partials/title_section.html.twig",{'nom':'Réinitialisation du mot de passe'})}}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Réinitialisation du mot de passe</h3>
                            </div>
                            <div class='content'>
                            <div class="message-flash">
                                {% for flash_error in app.flashes('reset_password_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                            </div>
                            <p>
                                {{ form_start(requestForm) }}
                                {{ form_row(requestForm.email) }}
                            <div>
                            <small>
                                 Entrez votre adresse mail et nous vous enverrons 
                                    un lien pour réinitaliser votre mot de passe  
                             </small>
        </div> 
                            </p>
                             <button class="btn btn btn-fill-out btn-lock">Envoyer le mail de réinitialisation</button>
                                {{ form_end(requestForm) }}
                                <p>Si vous ne recevez pas d'email merci de vérifier vos spam email ou <a href="{{ path('app_forgot_password_request') }}">Essayer de nouveau</a>.</p>
                            <div class="form-note text-center">Vous avez déja un compte? <a href="{{ path('app_register')}}">Se connecter</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
  

   

       
{% endblock %}
