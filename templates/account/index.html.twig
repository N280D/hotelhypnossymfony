{% extends 'base.html.twig' %}

{% block title %}Compte Client{% endblock %}

{% block body %}
{{include("partials/title_section.html.twig",{'nom':'Mon compte'})}}
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-4">
                <div class="dashboard_menu">
                    <ul class="nav nav-tabs flex-column" role="tablist">
                      <li class="nav-item">
                        <a class="nav-link active" id="dashboard-tab" data-toggle="tab" href="#dashboard" role="tab" aria-controls="dashboard" aria-selected="false"><i class="ti-layout-grid2"></i>Menu</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" id="orders-tab" data-toggle="tab" href="#orders" role="tab" aria-controls="orders" aria-selected="false"><i class="ti-shopping-cart-full"></i>Réservations</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" id="address-tab" data-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="true"><i class="ti-location-pin"></i>Mon adresse</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" id="account-detail-tab" data-toggle="tab" href="#account-detail" role="tab" aria-controls="account-detail" aria-selected="true"><i class="ti-id-badge"></i>Détail du compte</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout')}}"><i class="ti-lock"></i>Se déconnecter</a>
                      </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-8">

                    <div class="alert alert-success alert-dismissible fade show" role="alert"> message flash
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                    </div>


                <div class="tab-content dashboard_content">
                      <div class="tab-pane fade active show" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                        <div class="card">
                            <div class="card-header">
                                <h3>Bonjour {{app.user.Prenom |upper}}  {{app.user.Nom |upper}}</h3>
                            </div>
                            <div class="card-body">

                                <p> Depuis mon compte je peux facilement consulté : <a href="javascript:void(0);" onclick="$('#orders-tab').trigger('click')">récente réservation</a>, gérer mon compte <a href="javascript:void(0);" onclick="$('#address-tab').trigger('click')">adresse de facturation</a> et <a href="javascript:void(0);" onclick="$('#account-detail-tab').trigger('click')">changer mon mot de passe</a></p>
                            </div>
                        </div>
                      </div>
                      <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                        <div class="card">
                            <div class="card-header">
                                <h3>Orders</h3>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Réservation</th>
                                                <th>Date</th>
                                                <th>Statu</th>
                                                <th>Total</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>#1234</td>
                                                <td>14 avril 2022</td>
                                                <td>En cours</td>
                                                <td>$7800.00 pour 3 nuits</td>
                                                <td><a href="#" class="btn btn-fill-out btn-sm">Voir</a></td>
                                            </tr>
                                            <tr>
                                                <td>#2366</td>
                                                <td>June 20, 2020</td>
                                                <td>Completed</td>
                                                <td>8000.00 pour 5 nuits</td>
                                                <td><a href="#" class="btn btn-fill-out btn-sm">Voir</a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                      </div>
                    <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                        <div class="row">
                            <div class="col-lg-12">
                                <a href="" class="btn btn-fill-out mb-3">Ajouter une nouvelle adresse</a>
                            </div>
                        </div>
                        <div class="row">


                                    <div class="col-lg-6">
                                        <div class="card mb-3 mb-lg-0">
                                            <div class="card-header">
                                                <h3> Adresse # 1 </h3>
                                            </div>
                                            <div class="card-body">
                                                <address> Nom Prenom<br>
                                                    25 Rue symfony <br>
                                                  App n°10 <br>
                                                    Paris <br>
                                                    75000<br>
                                                    France

                                                </address>
                                                <div class="btn-group">
                                                    <a href="" class="btn btn-success">Valider</a>
                                                    <a href="" class="btn btn-success">Suppression</a>

                                                </div>

                                            </div>
                                        </div>
                                    </div>




                        </div>
                    </div>
                    <div class="tab-pane fade" id="account-detail" role="tabpanel" aria-labelledby="account-detail-tab">
                        <div class="card">
                            <div class="card-header">
                                <h3>Détails du compte</h3>
                            </div>
                            <div class="card-body">
                                <p>Vous avez déja un compte? <a href="#">Connectez vous!</a></p>
                                <form method="post" name="enq">
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label>Prènom <span class="required">*</span></label>
                                            <input required=""value="{{app.user.Prenom}}" class="form-control" name="name" type="text">
                                         </div>
                                         <div class="form-group col-md-6">
                                            <label>Nom <span class="required">*</span></label>
                                            <input required="" value="{{app.user.Nom}}" class="form-control" name="phone">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Email <span class="required">*</span></label>
                                            <input required="" value="{{app.user.email}}"class="form-control" name="email" type="email">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Mot de passe actuel <span class="required">*</span></label>
                                            <input required="" class="form-control" name="password" type="password">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Nouveau mot de passe <span class="required">*</span></label>
                                            <input required="" class="form-control" name="npassword" type="password">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label>Confirmer le mot de passe <span class="required">*</span></label>
                                            <input required="" class="form-control" name="cpassword" type="password">
                                        </div>
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn-fill-out" name="submit" value="Submit">Enregistrer</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




{% endblock %}
